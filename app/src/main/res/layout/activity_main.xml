<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/operationText"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="#e1e1e1"
        android:gravity="end"
        android:paddingStart="0dp"
        android:paddingEnd="10dp"
        android:text="@string/operationText"
        android:textColor="@android:color/black"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/resultText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoName" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#e1e1e1"
        android:gravity="center|end"
        android:paddingStart="0dp"
        android:paddingEnd="10dp"
        android:text="@string/resultText"
        android:textColor="@android:color/black"
        android:textSize="75sp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/operationText" />

    <TextView
        android:id="@+id/logoName"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#222222"
        android:fontFamily="sans-serif-light"
        android:gravity="center|start"
        android:paddingStart="15dp"
        android:paddingEnd="0dp"
        android:text="@string/logoName"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultText"
        app:layout_constraintVertical_chainStyle="spread">


        <Button
            android:id="@+id/CE_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#DEDEDE"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="@string/ceText"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@+id/num7_btn"
            app:layout_constraintEnd_toStartOf="@+id/C_btn"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/C_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#DEDEDE"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="@string/cText"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@+id/num8_btn"
            app:layout_constraintEnd_toStartOf="@+id/BS_btn"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@+id/CE_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/BS_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#DEDEDE"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="@string/bsText"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@+id/num9_btn"
            app:layout_constraintEnd_toStartOf="@+id/divide_btn"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/C_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/divide_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#DEDEDE"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="@string/divideText"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@+id/multiply_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@+id/BS_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/multiply_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#DEDEDE"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="@string/multiplyText"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@+id/minus_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/num9_btn"
            app:layout_constraintTop_toBottomOf="@id/divide_btn"
            app:layout_constraintVertical_chainStyle="spread"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/minus_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#DEDEDE"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="@string/minusText"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@+id/plus_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/num6_btn"
            app:layout_constraintTop_toBottomOf="@id/multiply_btn"
            app:layout_constraintVertical_chainStyle="spread"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/plus_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#DEDEDE"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="@string/plusText"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@+id/equal_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/num3_btn"
            app:layout_constraintTop_toBottomOf="@id/minus_btn"
            app:layout_constraintVertical_chainStyle="spread"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/num7_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#EFEEEE"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="@string/_7"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@+id/num4_btn"
            app:layout_constraintEnd_toStartOf="@+id/num8_btn"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/CE_btn"
            app:layout_constraintVertical_chainStyle="spread"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/num4_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#EFEEEE"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="@string/_4"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@+id/num1_btn"
            app:layout_constraintEnd_toStartOf="@+id/num5_btn"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/num7_btn"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/num1_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#EFEEEE"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="@string/_1"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@+id/signChange_btn"
            app:layout_constraintEnd_toStartOf="@+id/num2_btn"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/num4_btn"
            app:layout_constraintVertical_chainStyle="spread"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/signChange_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#DEDEDE"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="@string/signChangeText"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/num0_btn"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/num1_btn"
            app:layout_constraintVertical_chainStyle="spread"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/num8_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#EFEEEE"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="@string/_8"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@+id/num5_btn"
            app:layout_constraintEnd_toStartOf="@+id/num9_btn"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/num7_btn"
            app:layout_constraintTop_toBottomOf="@id/C_btn"
            app:layout_constraintVertical_chainStyle="spread"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/num5_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#EFEEEE"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="@string/_5"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@+id/num2_btn"
            app:layout_constraintEnd_toStartOf="@+id/num6_btn"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/num4_btn"
            app:layout_constraintTop_toBottomOf="@id/num8_btn"
            app:layout_constraintVertical_chainStyle="spread"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/num2_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#EFEEEE"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="@string/_2"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@+id/num0_btn"
            app:layout_constraintEnd_toStartOf="@+id/num3_btn"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/num1_btn"
            app:layout_constraintTop_toBottomOf="@id/num5_btn"
            app:layout_constraintVertical_chainStyle="spread"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/num0_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#EFEEEE"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="@string/_0"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/point_btn"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/signChange_btn"
            app:layout_constraintTop_toBottomOf="@id/num2_btn"
            app:layout_constraintVertical_chainStyle="spread"
            tools:ignore="TextSizeCheck,DuplicateSpeakableTextCheck" />

        <Button
            android:id="@+id/num9_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#EFEEEE"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="@string/_9"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@+id/num6_btn"
            app:layout_constraintEnd_toStartOf="@+id/multiply_btn"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/num8_btn"
            app:layout_constraintTop_toBottomOf="@id/BS_btn"
            app:layout_constraintVertical_chainStyle="spread"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/num6_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#EFEEEE"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="@string/_6"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@+id/num3_btn"
            app:layout_constraintEnd_toStartOf="@+id/minus_btn"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/num5_btn"
            app:layout_constraintTop_toBottomOf="@id/num9_btn"
            app:layout_constraintVertical_chainStyle="spread"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/num3_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#EFEEEE"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="@string/_3"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toTopOf="@+id/point_btn"
            app:layout_constraintEnd_toStartOf="@+id/plus_btn"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/num2_btn"
            app:layout_constraintTop_toBottomOf="@id/num6_btn"
            app:layout_constraintVertical_chainStyle="spread"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/point_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#DEDEDE"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="@string/pointText"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/equal_btn"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/num0_btn"
            app:layout_constraintTop_toBottomOf="@id/num3_btn"
            app:layout_constraintVertical_chainStyle="spread"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/equal_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#DEDEDE"
            android:insetLeft="3dp"
            android:insetTop="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:text="@string/equalText"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/point_btn"
            app:layout_constraintTop_toBottomOf="@id/plus_btn"
            app:layout_constraintVertical_chainStyle="spread"
            tools:ignore="TextSizeCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>